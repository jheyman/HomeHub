<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agenda_itemtoplayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFF00"
    android:orientation="vertical">

    <com.gbbtbb.homehub.CustomTextView
        android:id="@+id/agendaitem_dayofweek"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="-DAYOFWEEK-"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#00000000"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/agenda_item_weatheritemslayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/agenda_item_border"
        android:orientation="horizontal"/>

    <com.gbbtbb.homehub.CustomTextView
        android:id="@+id/agendaitem_event1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="-EVENT1-"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#00000000"/>
    <com.gbbtbb.homehub.CustomTextView
        android:id="@+id/agendaitem_event2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="-EVENT2-"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#3FFF30"/>
    <com.gbbtbb.homehub.CustomTextView
        android:id="@+id/agendaitem_event3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="-EVENT3-"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#00FFF0"/>
    <com.gbbtbb.homehub.CustomTextView
        android:id="@+id/agendaitem_event4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="-EVENT4-"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#8080FF"/>

</LinearLayout>