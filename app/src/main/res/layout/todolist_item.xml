<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todo_item_backgroundlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/todolist_border_fullslot"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/todoitem_postiticon"
        android:layout_width="48px"
        android:layout_height="48px"
        android:src="@drawable/todo"
        android:padding="10dp"
        android:visibility="gone"
        android:background="#00000000"/>

    <com.gbbtbb.homehub.CustomTextView
        android:id="@+id/todo_item"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:text="-----ITEM TEXT-------"
        android:textColor="#000000"
        android:textSize="@dimen/todolist_text_size"
        android:paddingLeft="15dp"
        android:gravity="center_vertical|left"
        android:background="#00000000"/>

    <com.gbbtbb.homehub.CustomTextView
        android:id="@+id/todoitem_creationdate"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="-----CREATION DATE-------"
        android:textColor="#000000"
        android:textSize="@dimen/todolist_creationdate_size"
        android:gravity="center_vertical|right"
        android:background="#00000000" />

    <ImageView
        android:id="@+id/todoitem_priorityicon"
        android:layout_width="50px"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/priority2"
        android:padding="10dp"
        android:visibility="visible"
        android:background="#00000000"/>

</LinearLayout>